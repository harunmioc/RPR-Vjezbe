<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="128.0" prefWidth="256.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@grad.css" />
    </stylesheets>
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label prefHeight="18.0" prefWidth="96.0" text="Naziv:           " />
                <TextField fx:id="fieldNaziv" prefWidth="150.0">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label prefHeight="18.0" prefWidth="96.0" text="Broj stanovnika:" />
                <TextField fx:id="fieldBrojStanovnika" prefWidth="150.0" />
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <children>
                <Label prefHeight="18.0" prefWidth="96.0" text="DrÅ¾ava:" />
                <ChoiceBox fx:id="choiceDrzava" prefWidth="150.0">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </ChoiceBox>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
        </HBox>
        <ButtonBar>
            <buttons>
                <Button fx:id="btnOk" mnemonicParsing="false" onAction="#btnOk" text="Ok" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#btnCancel" text="Cancel" />
            </buttons>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
        </ButtonBar>
    </children>
</VBox>
